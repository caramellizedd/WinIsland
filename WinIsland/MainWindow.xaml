<Window x:Class="WinIsland.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinIsland"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated"
        Title="WinIslandOwO234" Height="51" Width="451">
    <Border MouseUp="Border_MouseUp" Margin="10,0,10,14" Background="Black" BorderBrush="#444444" BorderThickness="1,0,1,1" CornerRadius="0,0,10,10">
        <Border.RenderTransform>
            <TranslateTransform x:Name="WindowTransform" />
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Color="Black" Direction="-90" ShadowDepth="4" Opacity="0.6"/>
        </Border.Effect>
        <Grid x:Name="mainContent">
            <!--Clock-->
            <Label x:Name="clock" Margin="10,0,0,0" Content="43:33 PM" Foreground="White" FontSize="16" FontFamily="Segoe UI"/>
            <!--Battery-->
            <Label x:Name="battery" Margin="0,0,10,0" HorizontalAlignment="Right" Content="&#xE83F;" Foreground="White" FontSize="26" FontFamily="Segoe Fluent Icons"/>
            <Frame NavigationUIVisibility="Hidden" Margin="10,35,10,10" Navigated="Frame_Navigated" Background="Red"/>
        </Grid>
    </Border>
</Window>

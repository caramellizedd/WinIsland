<Page x:Class="WinIsland.PopoutPages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WinIsland.PopoutPages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignHeight="466" d:DesignWidth="800"
      Title="Main Settings">
    <Grid>
        <CheckBox x:Name="blurEverywhere" Content="- Enable blur in Content Transition." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Click="blurEverywhere_Click"/>
    </Grid>
</Page>

<Page x:Class="WinIsland.PopoutPages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WinIsland.PopoutPages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      d:DesignHeight="466" d:DesignWidth="800"
      Title="Main Settings">
    <Grid>
		<StackPanel Margin="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top">
			<StackPanel Orientation="Horizontal">
				<Label Content="Ambient Background Blur Radius" Foreground="White"/>
				<Label Content="0px (Def: 40p)" Foreground="White" x:Name="abbrValueLabel"/>
			</StackPanel>
			<Slider Minimum="0" Maximum="80" x:Name="abbrSlider" ValueChanged="abbrSlider_ValueChanged"/>
			<CheckBox Margin="3,10,0,0" x:Name="blurEverywhere" Content="- Enable blur in Content Transition." Foreground="White"/>
            <CheckBox Margin="3,10,0,0" x:Name="startupCheck" Content="- Start with Windows." Foreground="White"/>
		</StackPanel>
	</Grid>
</Page>
